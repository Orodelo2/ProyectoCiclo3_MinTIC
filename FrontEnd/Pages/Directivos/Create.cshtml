@page
@model MyApp.Namespace.Directivos.CreateModelDirectivo
@{
    ViewData["Title"] = "Crear Directivo";
}


<h1>Crear Directivo</h1>
<br />
<form method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="newDirectivo.Nombre" class="control-label"></label>
            <input asp-for="newDirectivo.Nombre" class="form-control"></input>
            <span asp-validation-for="newDirectivo.Nombre" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="newDirectivo.Apellido" class="control-label"></label>
            <input asp-for="newDirectivo.Apellido" class="form-control"></input>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-2">
            <label asp-for="newDirectivo.TipoDocumento" class="control-label"></label>
            <select asp-for="newDirectivo.TipoDocumento" class="form-control">
                <option>CC</option>
                <option>TI</option>
                <option>PAS</option>
                <option>CE</option>
                <option>VISA</option>
            </select>
        </div>
        <div class="form-group col-md-7">
            <label asp-for="newDirectivo.NumeroDocumento" class="control-label"></label>
            <input asp-for="newDirectivo.NumeroDocumento" class="form-control"></input>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="newDirectivo.Edad" class="control-label"></label>
            <input asp-for="newDirectivo.Edad" class="form-control"></input>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="newDirectivo.Salario" class="control-label"></label>
            <input asp-for="newDirectivo.Salario" class="form-control"></input>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="newDirectivo.Telefono" class="control-label"></label>
            <input asp-for="newDirectivo.Telefono" class="form-control"></input>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="newDirectivo.Correo" class="control-label"></label>
            <input asp-for="newDirectivo.Correo" class="form-control"></input>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-9">
            <label asp-for="newDirectivo.Categoria" class="control-label"></label>
            <select asp-for="newDirectivo.Categoria" class="form-control">
                <option>Coordinador</option>
                <option>Gerente</option>
                <option>Supervisor</option>
                <option>Vice Gerente</option>
                <option>Presidente</option>
            </select>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="newDirectivo.CantidadEmpleados" class="control-label"></label>
            <input asp-for="newDirectivo.CantidadEmpleados" class="form-control"></input>
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-4 form-group">
        </div>
        <div class="col-md-4 form-group">
            <button type="submit" class="btn btn-secondary btn-lg btn-block rounded-pill">Guardar</button>
        </div>
        <div class="col-md-4 form-group">
        </div>
    </div>
</form>