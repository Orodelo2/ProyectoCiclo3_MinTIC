@page
@model MyApp.Namespace.Clientes.CreateModelCliente
@{
    ViewData["Title"] = "Crear Cliente";
}


<h1>Crear Cliente</h1>
<br/>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="newCliente.Nombre" class="control-label"></label>
                <input asp-for="newCliente.Nombre" class="form-control"></input>
                <span asp-validation-for="newCliente.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="newCliente.Apellido" class="control-label"></label>
                <input asp-for="newCliente.Apellido" class="form-control"></input>
            </div>
            <div class="form-group">
                <label asp-for="newCliente.TipoDocumento" class="control-label"></label>
                <input asp-for="newCliente.TipoDocumento" class="form-control"></input>
            </div>
            <div class="form-group">
                <label asp-for="newCliente.NumeroDocumento" class="control-label"></label>
                <input asp-for="newCliente.NumeroDocumento" class="form-control"></input>
            </div>
            <div class="form-group">
                <label asp-for="newCliente.Edad" class="control-label"></label>
                <input asp-for="newCliente.Edad" class="form-control"></input>
            </div>
            <div class="form-group">
                <label asp-for="newCliente.Telefono" class="control-label"></label>
                <input asp-for="newCliente.Telefono" class="form-control"></input>
            </div>
            <div class="form-group">
                <label asp-for="newCliente.Correo" class="control-label"></label>
                <input asp-for="newCliente.Correo" class="form-control"></input>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-secondary"></input>
            </div>
        </form>
    </div>
</div>