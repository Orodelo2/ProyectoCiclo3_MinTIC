@page
@model MyApp.Namespace.Empresas.CreateModelEmpresa
@{
    ViewData["Title"] = "Crear Empresa";
}


<h1>Crear Empresa</h1>
<br/>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="newEmpresa.Nombre" class="control-label"></label>
                <input asp-for="newEmpresa.Nombre" class="form-control"></input>
                <span asp-validation-for="newEmpresa.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="newEmpresa.NIT" class="control-label"></label>
                <input asp-for="newEmpresa.NIT" class="form-control"></input>
            </div>
            <div class="form-group">
                <label asp-for="newEmpresa.Telefono" class="control-label"></label>
                <input asp-for="newEmpresa.Telefono" class="form-control"></input>
            </div>
            <div class="form-group">
                <label asp-for="newEmpresa.Direccion" class="control-label"></label>
                <input asp-for="newEmpresa.Direccion" class="form-control"></input>
            </div>
            <div class="form-group">
                <label asp-for="newEmpresa.Correo" class="control-label"></label>
                <input asp-for="newEmpresa.Correo" class="form-control"></input>
            </div>
            <div class="form-group">
                <label asp-for="newEmpresa.Sector" class="control-label"></label>
                <input asp-for="newEmpresa.Sector" class="form-control"></input>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-secondary"></input>
            </div>
        </form>
    </div>
</div>