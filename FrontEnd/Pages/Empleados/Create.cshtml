@page
@model MyApp.Namespace.Empleados.CreateModelEmpleado
@{
    ViewData["Title"] = "Crear Empleado";
}

<h1>Crear Empleado</h1>
<br />
<form method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="newEmpleado.Nombre" class="control-label"></label>
            <input asp-for="newEmpleado.Nombre" class="form-control"></input>
            <span asp-validation-for="newEmpleado.Nombre" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="newEmpleado.Apellido" class="control-label"></label>
            <input asp-for="newEmpleado.Apellido" class="form-control"></input>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-2">
            <label asp-for="newEmpleado.TipoDocumento" class="control-label"></label>
            <select asp-for="newEmpleado.TipoDocumento" class="form-control">
                <option>CC</option>
                <option>TI</option>
                <option>PAS</option>
                <option>CE</option>
                <option>VISA</option>
            </select>
        </div>
        <div class="form-group col-md-7">
            <label asp-for="newEmpleado.NumeroDocumento" class="control-label"></label>
            <input asp-for="newEmpleado.NumeroDocumento" class="form-control"></input>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="newEmpleado.Edad" class="control-label"></label>
            <input asp-for="newEmpleado.Edad" class="form-control"></input>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="newEmpleado.Salario" class="control-label"></label>
            <input asp-for="newEmpleado.Salario" class="form-control"></input>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="newEmpleado.Telefono" class="control-label"></label>
            <input asp-for="newEmpleado.Telefono" class="form-control"></input>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="newEmpleado.Correo" class="control-label"></label>
            <input asp-for="newEmpleado.Correo" class="form-control"></input>
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-4 form-group">
        </div>
        <div class="col-md-4 form-group">
            <button type="submit" class="btn btn-secondary btn-lg btn-block rounded-pill">Guardar</button>
        </div>
        <div class="col-md-4 form-group">
        </div>
    </div>
</form>