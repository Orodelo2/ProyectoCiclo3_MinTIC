<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Proyecto Mision TIC ciclo 3</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://kit.fontawesome.com/c8be72fcc1.js" crossorigin="anonymous"></script>
</head>

<body>
    <header>
        <div class="container-fluid">
            <img class="logo-light img-fluid"
                src="//misiontic.ucaldas.edu.co/pluginfile.php/1/theme_mb2nl/logo/1626194708/logos1.png"
                alt="MISION TIC">
        </div>

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light" style="background-color: #3a3c5a;"
            border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand text-white font-weight-bold" asp-area="" asp-page="/Index">
                    <i class="fas fa-igloo"></i>
                    Inicio
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" id="navbarDropdown" role="button"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="far fa-address-book"></i>
                                Listados
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="nav-link p-1 mb-2 bg-light text-dark dropdown-item font-italic" asp-area=""
                                    asp-page="/Clientes/List">
                                    <i class="fas fa-user-friends"></i>
                                    Clientes
                                </a>
                                <a class="nav-link p-1 mb-2 bg-light text-dark dropdown-item font-italic" asp-area=""
                                    asp-page="/Directivos/List">
                                    <i class="fas fa-user-tie"></i>
                                    Directivos
                                </a>
                                <a class="nav-link p-1 mb-2 bg-light text-dark dropdown-item font-italic" asp-area=""
                                    asp-page="/Empleados/List">
                                    <i class="fas fa-people-carry"></i>
                                    Empleados
                                </a>
                                <a class="nav-link p-1 mb-2 bg-light text-dark dropdown-item font-italic" asp-area=""
                                    asp-page="/Empresas/List">
                                    <i class="far fa-building"></i>
                                    Empresas
                                </a>
                            </div>
                        </li>
                    </ul>
                    <div>
                        <a class="navbar-brand text-white font-weight-bold" asp-area="../../Areas" asp-page="/Logout">
                            <i class="fas fa-igloo"></i>
                            Inicio
                        </a>
                    </div>
                    <form class="form-inline my-2 my-lg-0">
                        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-secondary my-2 my-sm-0" type="submit">Buscar</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color: #b9c5ce;">
        <div class="container">
            &copy; 2021 - Ing. Orlando José Rodelo Soto - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
